<%= render 'layouts/sidebar_main' %>

<div class="page-header">
    <h2><%= fa_icon 'database' %> <%= t "crud.list.title", model: User.model_name.human.pluralize %></h2>
</div>

<table class="table table-bordered table-striped table-condensed">
  <thead>
    <tr>
        <th><%= User.human_attribute_name(:fullname) %></th>
        <th><%= User.human_attribute_name(:email) %></th>
        <th><%= User.human_attribute_name(:roles) %></th>
        <th colspan=4><%= t 'crud.column.actions' %></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.fullname %></td>
        <td><%= user.email %></td>
        <td><%= user.roles.join ', ' %></td>
        <td><%= link_to fa_icon('ellipsis-h'), user %></td>
        <td><%= link_to fa_icon('edit'), edit_user_path(user) %></td>
        <td><%= link_to fa_icon('remove'), user, method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('crud.button.new', model: User.model_name.human.downcase),
                                 new_user_path, class: 'btn btn-default' %>
