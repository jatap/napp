<% content_for :body_class, "backend-users-page" %>

<%= render 'layouts/sidebar_main' %>

<div class="page-header">
  <h2><%= fa_icon 'database' %> <%= t "crud.list.title", model: User.model_name.human.pluralize %></h2>
</div>

<table class="datatable table table-bordered table-striped dt-responsive no-wrap" width="100%"
       data-source="<%= users_path(format: :json) %>">
  <thead>
  <tr>
    <th><%= User.human_attribute_name(:fullname) %></th>
    <th><%= User.human_attribute_name(:slug) %></th>
    <th><%= User.human_attribute_name(:email) %></th>
    <th><%= User.human_attribute_name(:roles) %></th>
    <th><%= t 'crud.column.actions' %></th>
  </tr>
  </thead>

  <tbody>
  </tbody>
</table>

<br>

<%= link_to t('crud.button.new', model: User.model_name.human.downcase),
            new_user_path, class: 'btn btn-default' %>
