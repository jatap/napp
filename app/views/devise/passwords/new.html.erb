<% content_for :body_class, "change-password-page" %>

<%= render 'layouts/sidebar_main' %>

<div class="page-header">
    <h2><%= t "password.title" %><%= fa_icon "key" %></h2>
</div>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, wrapper: :vertical_input_group do %>
        <%= f.input_field :email, class: "form-control", autofocus: "autofocus" %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= button_tag(type: 'submit', class: "btn btn-radical-red btn-plain btn-circle btn-longshadow") do %>
      <%= fa_icon "check" %>
    <% end %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
