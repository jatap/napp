<%= render 'layouts/sidebar_main' %>

<div class="page-header">
    <h2><%= t "password.title" %></h2>
</div>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, wrapper: :vertical_input_group do %>
        <span class="input-group-addon"><%= fa_icon "envelope" %></span>
        <%= f.input_field :email, class: "form-control", autofocus: "autofocus" %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t("password.submit") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
