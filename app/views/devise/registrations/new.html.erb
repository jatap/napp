<%= render 'layouts/sidebar_main' %>

<div class="page-header">
    <h2><%= t "sign_up.title" %></h2>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :fullname, required: true, wrapper: :vertical_input_group do %>
        <span class="input-group-addon"><%= fa_icon "user" %></span>
        <%= f.input_field :fullname, class: "form-control", autofocus: "autofocus" %>
    <% end %>
    <%= f.input :email, required: true, wrapper: :vertical_input_group do %>
        <span class="input-group-addon"><%= fa_icon "envelope" %></span>
        <%= f.input_field :email, class: "form-control"%>
    <% end %>
    <%= f.input :password, required: true, hint: (t(:password_length, count: @minimum_password_length) if @validatable), wrapper: :vertical_input_group do %>
        <span class="input-group-addon"><%= fa_icon "key" %></span>
        <%= f.input_field :password, class: "form-control" %>
    <% end %>
    <%= f.input :password_confirmation, required: true, wrapper: :vertical_input_group do %>
        <span class="input-group-addon"><%= fa_icon "key" %></span>
        <%= f.input_field :password_confirmation, class: "form-control" %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t("sign_up.submit.add") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
