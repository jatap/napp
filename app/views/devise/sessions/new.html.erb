<%= render 'layouts/sidebar_main' %>

<div class="page-header">
    <h2><%= t "sign_in.title" %></h2>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: true, wrapper: :vertical_input_group do %>
        <span class="input-group-addon"><%= fa_icon "envelope" %></span>
        <%= f.input_field :email, class: "form-control", autofocus: "autofocus" %>
    <% end %>
    <%= f.input :password, required: true, wrapper: :vertical_input_group do %>
        <span class="input-group-addon"><%= fa_icon "key" %></span>
        <%= f.input_field :password, class: "form-control" %>
    <% end %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t("sign_in.submit.add") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
