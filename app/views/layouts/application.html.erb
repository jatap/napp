<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Napp" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Napp" %>">
    <%= stylesheet_link_tag 'frontend', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'frontend', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main">
       <%= render 'layouts/messages' %>
       <div class="sidebar">
           <%= yield(:sidebar) %>
       </div>

       <div class="content">
           <%= yield %>
       </div>
    </main>
  </body>
</html>
